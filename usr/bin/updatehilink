#!/bin/ash
# Installation script by ARYO.

DIR=/usr/bin


finish(){
clear
	echo ""
    echo "UPDATE SUCCESSFULLY ;)"
    echo ""
    echo "Untuk Menjalankan Ketik m dan enter di terminal"
    sleep 2
    echo ""
    echo "SALAM SEWU MANGATUS"
    echo ""
    echo ""
}

download_files()
{
  	echo "Update Script hilink mak cling..."
   	rm -f $DIR/m && wget -O $DIR/m https://raw.githubusercontent.com/aryobrokolly/menghilink/main/usr/bin/m && chmod +x $DIR/m
 	rm -f $DIR/hilink && wget -O $DIR/hilink https://raw.githubusercontent.com/aryobrokolly/menghilink/main/usr/bin/hilink && chmod +x $DIR/hilink
  	rm -f $DIR/balong-nvtool && wget -O $DIR/balong-nvtool https://raw.githubusercontent.com/aryobrokolly/menghilink/main/usr/bin/balong-nvtool && chmod +x $DIR/balong-nvtool
    	finish
}

echo ""
echo "Install Script code from repo aryo."

while true; do
    read -p "Apakah akan update script hilink (y/n)? " yn
    case $yn in
        [Yy]* ) download_files; break;;
        [Nn]* ) exit;;
        * ) echo "Please answer 'y' or 'n'.";;
    esac
done
